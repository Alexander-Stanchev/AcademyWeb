@model Academy.Web.Areas.Teacher.Models.CoursesByTeacherViewModel
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-5 col-lg-5 col-xs-12">
                <h3>Hello @Model.UserName</h3>
            </div>
            <div class="col-md-5 col-lg-5 col-xs-12">
                <button type="button" class="btn btn-outline-info"><a asp-controller="dashboard" asp-action="add" asp-area="teacher">Add new course</a></button>
            </div>
        </div>
        <table class="table table-hover table-responsive table-bordered">
            <caption class="caption">Courses taught by you</caption>
            <thead>
                <tr>
                    <th>Course Name</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Enrolled Students</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var course in Model.Courses)
                {
                    <tr>
                        <td><a asp-area="teacher" asp-controller="dashboard" asp-action="course" asp-route-id="@course.Id">@course.Name</a></td>
                        <td>@course.Start.ToShortDateString()</td>
                        <td>@course.End.ToShortDateString()</td>
                        <td>@course.EnrolledStudentCount</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
