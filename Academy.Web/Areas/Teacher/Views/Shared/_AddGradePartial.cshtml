@using Academy.Web.Areas.Teacher.Models
@model GradeViewModel
@{
    ViewData["Title"] = "_AddGradePartial";
}


<!-- Modal -->
<div class="modal fade" id="@Model.AssignmentName.Replace(" ","")" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">@Model.AssignmentName</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            @if (Model.StudentsToBeGraded.Count() != 0)
            {
                <div class="modal-body">
                    <form class="grade-student" asp-area="teacher" asp-controller="dashboard" asp-action="gradestudent" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <select class="form-control" asp-for="StudentId" asp-items="Model.StudentsToBeGraded"></select>
                        </div>
                        <div class="form-group">
                            <label asp-for="PointsReceived"></label>
                            <input asp-for="PointsReceived" />
                            <span asp-validation-for="PointsReceived" class="text-danger"></span>
                        </div>
                        <input class="hidden" value="@Model.AssignmentId" asp-for="AssignmentId" readonly />
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-success save-button">Submit</button>
                    </form>
                </div>

            }
            else
            {
                <div class="modal-body">
                    <div class="alert alert-success">
                        <strong>All students already have grades</strong>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>

                </div>
            }

        </div>
    </div>
</div>



