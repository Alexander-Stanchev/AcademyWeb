@model Academy.Web.Areas.Administration.Models.AdminViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}

<div class="row">
    <div class="col-md-12">
        <h3>List of all students:</h3>
        <select>
            <option></option>
            @foreach (var user in Model.Users)
            {
                <option>
                    <h>@user.FullName</h>
                </option>
            }
        </select>

        <a asp-area="" asp-controller="Dashboard" asp-action="Index" class="btn btn-lg btn-primary">Promote to Teacher</a>
    </div>
</div>

